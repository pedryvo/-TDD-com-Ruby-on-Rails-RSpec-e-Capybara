<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>


<h1>New customer</h1>

<%= form_with model: @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <br>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <br>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <br>

  <%= f.label :smoker %>
 
  <% {'Y': 'Yes', 'N': 'No'}.each do |k,v| %>
    <%= f.radio_button :smoker, k %> <%= v %>
  <% end %>
  
  <br>
  <br>

  <%= f.submit 'Register customer' %>
<% end %>